<!-- views/admin/login.ejs -->
<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Apologize</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    /* Add a unique style for the login page */
    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }
    
    header {
      text-align: center;
      margin-bottom: 40px;
    }
    
    .logo a {
      font-size: 28px;
      font-weight: 700;
      color: #7e57c2;
      text-decoration: none;
      position: relative;
      display: inline-block;
    }
    
    .logo a:after {
      content: '‚ú®';
      position: absolute;
      top: -5px;
      right: -20px;
      font-size: 16px;
      animation: sparkle 1.5s infinite;
    }
    
    @keyframes sparkle {
      0% { opacity: 0.5; transform: scale(0.8); }
      50% { opacity: 1; transform: scale(1.2); }
      100% { opacity: 0.5; transform: scale(0.8); }
    }
    
    .login-page {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .login-form-container {
      background-color: white;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      padding: 40px;
      width: 100%;
      max-width: 420px;
      position: relative;
      overflow: hidden;
    }
    
    .login-form-container:before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 6px;
      background: linear-gradient(to right, #7e57c2, #b085f5);
    }
    
    .login-form-container h1 {
      margin-bottom: 30px;
      text-align: center;
      color: #333;
      font-weight: 600;
      font-size: 24px;
      position: relative;
    }
    
    .login-form-container h1:after {
      content: 'üîê';
      margin-left: 10px;
      font-size: 20px;
    }
    
    .form-group {
      margin-bottom: 24px;
      position: relative;
    }
    
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: 500;
      color: #555;
      font-size: 14px;
    }
    
    input[type="text"],
    input[type="password"] {
      width: 100%;
      padding: 12px 16px;
      background-color: #f8f9fa;
      border: 2px solid #e4e8f0;
      border-radius: 12px;
      font-size: 15px;
      transition: all 0.3s;
    }
    
    input[type="text"]:focus,
    input[type="password"]:focus {
      border-color: #7e57c2;
      background-color: #fff;
      box-shadow: 0 0 0 4px rgba(126, 87, 194, 0.1);
      outline: none;
    }
    
    .form-actions {
      margin-top: 32px;
    }
    
    .btn {
      display: block;
      width: 100%;
      padding: 14px;
      background: linear-gradient(to right, #7e57c2, #9575cd);
      color: white;
      border: none;
      border-radius: 12px;
      font-weight: 600;
      font-size: 16px;
      cursor: pointer;
      transition: all 0.3s;
      text-align: center;
      text-decoration: none;
      position: relative;
      overflow: hidden;
    }
    
    .btn:before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: all 0.6s;
    }
    
    .btn:hover:before {
      left: 100%;
    }
    
    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 7px 14px rgba(126, 87, 194, 0.2);
    }
    
    .alert-danger {
      background-color: #fff2f0;
      border-left: 4px solid #ff4d4f;
      color: #ff4d4f;
      padding: 12px 16px;
      border-radius: 8px;
      margin-bottom: 24px;
      font-size: 14px;
    }
    
    footer {
      text-align: center;
      margin-top: 40px;
      color: #888;
      font-size: 13px;
    }
    
    footer p {
      position: relative;
      display: inline-block;
    }
    
    footer p:after {
      content: '‚ù§Ô∏è';
      margin-left: 5px;
      font-size: 12px;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <div class="logo">
        <a href="/">By @plus9995</a>
      </div>
    </header>

    <main class="login-page">
      <div class="login-form-container">
        <h1>Login to admin</h1>
        
        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger">
            <%= error %>
          </div>
        <% } %>
        
        <form action="/admin/login" method="POST" class="login-form">
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" placeholder="Username" required>
          </div>
          
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Password is 1234" required>
          </div>
          
          <div class="form-actions">
            <button type="submit" class="btn btn-primary btn-block">Login</button>
          </div> 
        </form>
      </div>
    </main>

    <footer>
      <p>&copy; <%= new Date().getFullYear() %> Apologize. All rights reserved.</p>
    </footer>
  </div>
</body>
</html>