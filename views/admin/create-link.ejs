<!-- views/admin/create-link.ejs -->
<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Apologize</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <header class="admin-header">
      <div class="logo">
        <a href="/admin/dashboard">Apologize Admin</a>
      </div>
      <div class="admin-nav">
        <a href="/admin/dashboard" class="btn btn-sm">กลับไป Dashboard</a>
        <a href="/admin/logout" class="btn btn-sm btn-outline">ออกจากระบบ</a>
      </div>
    </header>

    <main class="create-link-page">
      <h1>สร้างลิงก์ใหม่</h1>
      
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
      <% } %>
      
      <form action="/admin/create-link" method="POST" class="create-link-form">
        <div class="form-group">
          <label for="name">ชื่อมอด *</label>
          <input type="text" id="name" name="name" value="<%= typeof formData !== 'undefined' ? formData.name : '' %>" required>
        </div>
        
        <div class="form-group">
          <label for="originalLink">ลิงก์มอดต้นฉบับ *</label>
          <input type="url" id="originalLink" name="originalLink" value="<%= typeof formData !== 'undefined' ? formData.originalLink : '' %>" required>
        </div>
        
        <div class="form-group">
          <label for="image">ลิงก์รูปภาพ (ไม่บังคับ)</label>
          <input type="url" id="image" name="image" value="<%= typeof formData !== 'undefined' ? formData.image : '' %>">
          <small>หากไม่ใส่ จะใช้รูปภาพเริ่มต้น</small>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">สร้างลิงก์</button>
        </div>
      </form>
    </main>

    <footer>
      <p>&copy; <%= new Date().getFullYear() %> Free Mod. All rights reserved.</p>
    </footer>
  </div>
</body>
</html>