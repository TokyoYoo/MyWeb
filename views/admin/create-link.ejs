      margin-bottom: 8px;
      font-weight: 500;
      color: var(--text);
    }

    input[type="text"],
    input[type="url"],
    input[type="password"] {
      width: 100%;
      padding: 12px 15px;
      border: 2px solid var(--border);
      border-radius: 8px;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    input[type="text"]:focus,
    input[type="url"]:focus,
    input[type="password"]:focus {
