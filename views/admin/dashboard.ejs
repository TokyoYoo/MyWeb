<!-- views/admin/dashboard.ejs -->
<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Apologize</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <header class="admin-header">
      <div class="logo">
        <a href="/admin/dashboard">My Name Is Mr.M No.1</a>
      </div>
      <div class="admin-nav">
        <a href="/admin/create-link" class="btn btn-sm">Create a new link</a>
        <a href="/admin/logout" class="btn btn-sm btn-outline">Log out</a>
      </div>
    </header>

    <main class="admin-dashboard">
      <h1>Dashboard</h1>
      
      <div class="dashboard-stats">
        <div class="stat-card">
          <h3>All scripts</h3>
          <p class="stat-number"><%= mods.length %></p>
        </div>
        <div class="stat-card">
          <h3>Total number of clicks</h3>
          <p class="stat-number"><%= mods.reduce((total, mod) => total + mod.clicks, 0) %></p>
        </div>
        <div class="stat-card">
          <h3>Total number of downloads</h3>
          <p class="stat-number"><%= mods.reduce((total, mod) => total + mod.completedClicks, 0) %></p>
        </div>
      </div>
      
      <div class="mods-table-container">
        <h2>All scripts list</h2>
        <table class="mods-table">
          <thead>
            <tr>
              <th>Script Name</th>
              <th>Short ID</th>
              <th>Click</th>
              <th>Download</th>
              <th>Link</th>
              <th>Manage</th>
            </tr>
          </thead>
          <tbody>
            <% if (mods.length > 0) { %>
              <% mods.forEach(mod => { %>
                <tr>
                  <td><%= mod.name %></td>
                  <td><%= mod.shortId %></td>
                  <td><%= mod.clicks %></td>
                  <td><%= mod.completedClicks %></td>
                  <td>
                    <a href="/mod/<%= mod.shortId %>" target="_blank" class="link-btn">ดูลิงก์</a>
                  </td>
                  <td class="actions">
                    <a href="/admin/edit/<%= mod._id %>" class="btn btn-sm">แก้ไข</a>
                    <form action="/admin/delete/<%= mod._id %>?_method=DELETE" method="POST" class="inline-form">
                      <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('คุณแน่ใจหรือไม่ที่จะลบ?')">ลบ</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center">Script data not found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>

    <footer>
      <p>&copy; <%= new Date().getFullYear() %> Free Mod. All rights reserved.</p>
    </footer>
  </div>
</body>
</html>